
@model Teacher
@{
    ViewData["Title"] = "Teacher Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>



<form asp-controller="api" asp-action="Teacher" method="POST" class="needs-validation" novalidate>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="id"></label>
        <input class="form-control" asp-for="id" />
        <span asp-validation-for="id"></span>
    </div>
    <div class="form-group">
        <label asp-for="EntryID"></label>
        <input class="form-control" asp-for="EntryID" />
        <span asp-validation-for="EntryID"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject"></label>
        <input class="form-control" asp-for="Subject" />
        <span asp-validation-for="Subject"></span>
    </div>
    <div class="form-group">
        <h5>   Use ',' as a Divider - e.g : ח,ט,י,י-א</h5>
        <label asp-for="GradesString"></label>
        <input class="form-control" asp-for="GradesString" />
        <span asp-validation-for="GradesString"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
